{
    "name": "stillat/meerkat",
    "type": "statamic-addon",
    "description": "A streamlined comment system for Statamic 3",
    "keywords": [
        "statamic",
        "comments"
    ],
    "license": "proprietary",
    "require": {
        "php": "^8.0",
        "statamic/cms": "^4 || ^5"
    },
    "authors": [
        {
            "name": "John Koster",
            "email": "john@stillat.com",
            "homepage": "https://stillat.com",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Stillat\\Meerkat\\": "src"
        }
    },
    "extra": {
        "statamic": {
            "name": "Meerkat",
            "description": "A streamlined comment system for Statamic 3",
            "version": "2.0.0"
        },
        "laravel": {
            "providers": [
                "Stillat\\Meerkat\\ServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "pixelfear/composer-dist-plugin": true
        }
    },
    "require-dev": {
        "laravel/pint": "^1.6"
    }
}
